root = true

# Set default charset
[*.{js,py}]
charset = utf-8

# 2 space indentation
[*.js]
indent_style = space
indent_size = 2

[*.{css,less,scss}]
indent_style = space
indent_size = 2

[*.{hbs,stache,mustache,jade,html,xml}]
indent_style = space
indent_size = 2

[*.{js,coffee}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 4

[*.{md,txt}]
indent_style = space
indent_size = 2
